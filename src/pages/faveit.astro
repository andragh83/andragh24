---
import HeroImage from '@components/molecules/heroImage/HeroImage'
import Layout from '../layouts/Layout.astro'

import profile_img from '@assets/profile.jpg'
---

<Layout
    title="Andra Ghitulescu - Frontend Software Engineer"
    imagePath={profile_img.src}
>
    <main class="flex gap-8 2xl:gap-12 w-full flex-col xl:flex-row xl:h-dvh">
        <div class="flex flex-col w-full gap-8">
            <div
                class="flex items-center justify-between border-b border-border-muted py-6 px-[24px] 2xl:px-[40px]"
            >
                <a
                    href="/"
                    class="flex items-center gap-2 text-default hover:text-accent-color transition-colors"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-text-default"
                    >
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                    <span class="text-text-default">Go Back</span>
                </a>
                <h1
                    class="text-3xl font-bold text-text-default absolute left-1/2 -translate-x-1/2"
                >
                    FaveIT
                </h1>
                <div class="w-[102px]"></div>
            </div>

            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-6 px-[24px] 2xl:px-[40px]"
            >
                <div
                    class="bg-card-bg rounded-lg p-6 hover:shadow-lg transition-shadow text-text-default lg:col-span-2"
                >
                    <h3 class="text-xl font-semibold mb-4">Concept</h3>
                    <p class="text-text-muted">Card content goes here</p>
                </div>
                <div
                    class="bg-card-bg rounded-lg p-6 hover:shadow-lg transition-shadow text-text-default"
                >
                    <h3 class="text-xl font-semibold mb-4">Figma designs</h3>
                    <p class="text-text-muted">Card content goes here</p>
                </div>
                <div
                    class="bg-card-bg rounded-lg p-6 hover:shadow-lg transition-shadow text-text-default"
                >
                    <h3 class="text-xl font-semibold mb-4">Card 3</h3>
                    <p class="text-text-muted">Card content goes here</p>
                </div>
            </div>
        </div>

        <div
            class="fixed bottom-0 right-0 translate-x-1/2 translate-y-1/2 w-1/4 h-1/4 rounded-full bg-accent-color filter blur-[150px] md:blur-[300px]"
        >
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        gap: 0px;
    }

    .scrollbar-style {
    }
    .scrollbar-style::-webkit-scrollbar-thumb {
        background: var(--scroll-bar-thumb, #343434);
        border-radius: 10px;
    }
    .scrollbar-style::-webkit-scrollbar {
        width: 4px;
        background-color: var(--scroll-bar-bg, #1f1f1f);
    }
    .spinner {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: var(--scroll-bar-bg, #1f1f1f);
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: opacity 200ms;
    }

    /* loader curtesy of https://cssloaders.github.io/ */

    .loader {
        color: var(--loader-color, #ececec);
        font-size: 45px;
        text-indent: -9999em;
        overflow: hidden;
        width: 1em;
        height: 1em;
        border-radius: 50%;
        position: relative;
        transform: translateZ(0);
        animation:
            mltShdSpin 1.7s infinite ease,
            round 1.7s infinite ease;
    }

    @keyframes mltShdSpin {
        0% {
            box-shadow:
                0 -0.83em 0 -0.4em,
                0 -0.83em 0 -0.42em,
                0 -0.83em 0 -0.44em,
                0 -0.83em 0 -0.46em,
                0 -0.83em 0 -0.477em;
        }
        5%,
        95% {
            box-shadow:
                0 -0.83em 0 -0.4em,
                0 -0.83em 0 -0.42em,
                0 -0.83em 0 -0.44em,
                0 -0.83em 0 -0.46em,
                0 -0.83em 0 -0.477em;
        }
        10%,
        59% {
            box-shadow:
                0 -0.83em 0 -0.4em,
                -0.087em -0.825em 0 -0.42em,
                -0.173em -0.812em 0 -0.44em,
                -0.256em -0.789em 0 -0.46em,
                -0.297em -0.775em 0 -0.477em;
        }
        20% {
            box-shadow:
                0 -0.83em 0 -0.4em,
                -0.338em -0.758em 0 -0.42em,
                -0.555em -0.617em 0 -0.44em,
                -0.671em -0.488em 0 -0.46em,
                -0.749em -0.34em 0 -0.477em;
        }
        38% {
            box-shadow:
                0 -0.83em 0 -0.4em,
                -0.377em -0.74em 0 -0.42em,
                -0.645em -0.522em 0 -0.44em,
                -0.775em -0.297em 0 -0.46em,
                -0.82em -0.09em 0 -0.477em;
        }
        100% {
            box-shadow:
                0 -0.83em 0 -0.4em,
                0 -0.83em 0 -0.42em,
                0 -0.83em 0 -0.44em,
                0 -0.83em 0 -0.46em,
                0 -0.83em 0 -0.477em;
        }
    }

    @keyframes round {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>
