---
interface Props {
    title: string
    imagePath: string
}

const { title, imagePath } = Astro.props
import '@fontsource-variable/urbanist'
import '@fontsource/merriweather'
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Meta Description -->
        <meta
            name="description"
            content="Hi! I'm Andra Ghitulescu, frontend software engineer, passionate JS/TS enthusiast with a flair for UI/UX design."
        />

        <!-- Open Graph Meta Tags -->
        <meta
            property="og:title"
            content="Andra Ghitulescu - Frontend Software Engineer"
        />
        <meta
            property="og:description"
            content="Hi! I'm Andra Ghitulescu, frontend software engineer, passionate JS/TS enthusiast with a flair for UI/UX design."
        />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://www.andragh.co.uk" />
        <meta property="og:image" content={imagePath} />

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:title"
            content="Andra Ghitulescu - Frontend Software Engineer"
        />
        <meta
            name="twitter:description"
            content="Hi! I'm Andra Ghitulescu, frontend software engineer, passionate JS/TS enthusiast with a flair for UI/UX design."
        />
        <meta name="twitter:image" content={imagePath} />

        <!-- Canonical URL -->
        <link rel="canonical" href="https://www.andragh.co.uk" />

        <!-- Favicon -->
        <link
            rel="icon"
            href="https://www.andragh.co.uk/favicon.ico"
            type="image/x-icon"
        />

        <!-- Schema.org Structured Data Markup -->
        <script
            type="application/ld+json"
            set:html={JSON.stringify({
                '@context': 'https://schema.org',
                '@type': 'Person',
                name: 'Andra Ghitulescu',
                url: 'https://www.andragh.co.uk',
                sameAs: [
                    'https://www.linkedin.com/in/andra-ghitulescu',
                    'https://www.github.com/andragh83',
                    'https://x.com/AndraGhitulescu',
                    'https://www.instagram.com/andragh83',
                ],
                jobTitle: 'Frontend Software Engineer',
                description:
                    "Hi! I'm Andra Ghitulescu, frontend software engineer, passionate JS/TS enthusiast with a flair for UI/UX design.",
                knowsAbout: [
                    'Javascript',
                    'Typescript',
                    'React',
                    'NextJs',
                    'Redux',
                    'Saga',
                    'React Native',
                    'Expo',
                    'Figma',
                ],
                worksFor: [
                    {
                        '@type': 'Organization',
                        name: 'Custodian',
                        sameAs: 'https://www.custodian.club',
                    },
                    {
                        '@type': 'Organization',
                        name: 'FaveIT',
                        sameAs: 'https://www.faveitapp.com',
                    },
                ],
                alumniOf: {
                    '@type': 'CollegeOrUniversity',
                    name: 'FABIZ',
                },
                mainEntityOfPage: {
                    '@type': 'WebPage',
                    '@id': 'https://www.andragh.co.uk',
                },
                image: imagePath,
            })}
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --bg-color-default: #181818;
        --bg-color-muted: #343434;
        --text-default: #fafafa;
        --text-muted: #c5c5c5;
        --btn-bg: #e5e5e5;
        --card-bg: #282828;
        --card-bg-lighter: #3a3a3a;
        --border-muted: #4b4b4b;
        --border-default: #616161;
        --switch-bg: #333333;
        --icon-color: #afafaf;
        --icon-color-muted: #c2c2c2;
        --bg-image-default: linear-gradient(#181818a2, #181818);
        --bg-image-granular: linear-gradient(#181818, #181818, #18181800);
        --bg-image-granular-dark: linear-gradient(
            #18181847,
            #1818186d,
            #181818ce,
            #181818
        );
        --scroll-bar-bg: #1f1f1f;
        --scroll-bar-thumb: #343434;
        --loader-color: #ececec;
        --inset-shadow-color: #3b3b3b;
        --shadow-color: rgba(255, 255, 255, 0.1);
        --shimmer-color: rgba(60, 60, 60, 0.7);
        --accent-color: #d5206f;
        --accent-color-hover: #d5206f80;
        --accent-color-active: #d5206f40;
    }
    html {
        font-family: 'Urbanist', sans-serif;
        background: var(--bg-color-default, #181818);
    }

    .html.light {
        --bg-color-default: #181818;
        --bg-color-muted: #343434;
        --text-default: #fafafa;
        --card-bg: #282828;
        --card-bg-lighter: #3a3a3a;
        --border-muted: #4b4b4b;
        --border-default: #616161;
        --switch-bg: #333333;
        --icon-color: #afafaf;
        --icon-color-muted: #c2c2c2;
        --bg-image-default: linear-gradient(#181818a2, #181818);
        --bg-image-granular: linear-gradient(#181818, #181818, #18181800);
        --bg-image-granular-dark: linear-gradient(
            #18181847,
            #1818186d,
            #181818ce,
            #181818
        );
        --scroll-bar-bg: #1f1f1f;
        --scroll-bar-thumb: #343434;
        --loader-color: #ececec;
        --inset-shadow-color: #3b3b3b;
        --shadow-color: rgba(255, 255, 255, 0.1);
        --shimmer-color: rgba(60, 60, 60, 0.7);
    }

    code {
        font-family:
            'Urbanist',
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>
