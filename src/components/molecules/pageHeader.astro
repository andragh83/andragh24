---
interface Props {
    title: string
}

const { title } = Astro.props
---

<div
    class="flex items-center justify-between border-b border-border-muted py-6 px-[24px] 2xl:px-[40px]"
>
    <a
        href="/"
        class="flex items-center gap-2 text-default hover:text-accent-color transition-colors"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-text-default"
        >
            <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        <span class="text-text-default hidden md:block">Go Back</span>
    </a>
    <h1
        class="text-xl md:text-3xl font-semibold text-text-default absolute left-1/2 -translate-x-1/2"
    >
        {title}
    </h1>
    <div class="w-[102px]"></div>
</div>

